# ── Server Configuration ──────────────────────────────────
NODE_ENV=development
PORT=5000

# ── MongoDB ───────────────────────────────────────────────
# Get a free cluster at https://mongodb.com/atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/facetrack?retryWrites=true&w=majority

# ── JWT Secrets (use long random strings in production) ───
JWT_SECRET=CHANGE_ME_random_string_at_least_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_ME_different_random_string_32_chars
JWT_REFRESH_EXPIRES_IN=7d

# ── Face Recognition Microservice ─────────────────────────
FACE_SERVICE_URL=http://localhost:8000

# ── Rate Limiting ─────────────────────────────────────────
RATE_LIMIT_LOGIN=10
RATE_LIMIT_FACE_SCAN=20
RATE_LIMIT_API=200

# ── Admin Default Credentials ─────────────────────────────
ADMIN_EMAIL=admin@facetrack.com
ADMIN_PASSWORD=Admin@123
